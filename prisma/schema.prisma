generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enums
enum UserRole {
  USER
  VENDOR
  ADMIN
}

enum OrderStatus {
  PENDING
  PAID
  SHIPPED
  DELIVERED
  CANCELED
}

enum PaymentStatus {
  PAID
  PENDING
  REFUNDED
}
enum PaymentMethod {
  CREDIT_CARD
  BANK_TRANSFER
  PAYPAL
}

enum StockLogType {
  IN
  OUT
}

enum EntityType {
  User
  Product
  Order
  Vendor
  Payment
  StockLog
}

enum ActionType {
  CREATE
  UPDATE
  DELETE
  STOCK_CHANGE
}

// Models
model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      UserRole @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Optional default address fields
  address   String?
  city      String?
  country   String?
  zipCode   String?
  phone     String?

  favorites     Product[]     @relation("UserFavorites")
  orders        Order[]
  performedLogs EventLog[]
  refreshTokens RefreshToken[]
  cartItems     CartItem[]
  vendor        Vendor?

  @@index([role])
  @@map("users")
}


model Vendor {
  id          String   @id @default(uuid())
  userId      String   @unique
  user        User     @relation(fields: [userId], references: [id], onDelete: Restrict)

  slug        String   @unique
  description String
  logoUrl     String
  coverUrl    String
  phone       String

  // Address Fields
  address     String
  city        String
  country     String
  zipCode     String

  products    Product[]
  orders      Order[]

  deletedAt DateTime?
  isActive Boolean @default(true)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Product {
  id          String   @id @default(uuid())
  name        String
  description String
  price       Float    @default(0)
  stock       Int      @default(0)
  vendorId    String
  categoryId  String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  vendor        Vendor       @relation(fields: [vendorId], references: [id], onDelete: Restrict)
  category      Category?       @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  stockLogs     StockLog[]
  favoritedBy   User[]          @relation("UserFavorites")
  images        ProductImage[]
  cartItems     CartItem[]
  variants      ProductVariant[]
  orderItems    OrderItem[]

  deletedAt DateTime?

  @@map("products")
  @@index([vendorId])
  @@index([categoryId])
}

model ProductVariant {
  id        String   @id @default(uuid())
  productId String
  name      String  // color, size, model
  value     String   //  red, L, XL
  stock     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@map("product_variants")
  @@index([productId])
}

model ProductImage {
  id        String   @id @default(uuid())
  productId String
  url       String
  createdAt DateTime @default(now())

  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@map("product_images")
  @@index([productId])
}

model Category {
  id          String   @id @default(uuid())
  name        String   @unique
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  deletedAt   DateTime?

  products Product[]

  @@map("categories")
}

model CartItem {
  id        String  @id @default(uuid())
  userId    String
  productId String
  quantity  Int     @default(1)

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@map("cart_items")
  @@index([userId])
  @@index([productId])
}

model Order {
  id              String      @id @default(uuid())
  userId          String
  vendorId        String?
  totalPrice      Float       @default(0)
  status          OrderStatus @default(PENDING)
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  // Shipping Address Fields
  shippingAddress String
  shippingCity    String
  shippingCountry String
  shippingZip     String

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  vendor  Vendor? @relation(fields: [vendorId], references: [id], onDelete: Restrict)
  payment Payment?

  items   OrderItem[]  

  @@map("orders")
  @@index([userId])
  @@index([vendorId])
}

model Payment {
  id            String         @id @default(uuid())
  orderId       String         @unique
  amount        Float          @default(0)
  status        PaymentStatus  @default(PENDING)
  paymentMethod PaymentMethod
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@map("payments")
}

model StockLog {
  id        String       @id @default(uuid())
  productId String
  quantity  Int // non-negative constraint enforced via migrations
  type      StockLogType
  timestamp DateTime     @default(now())

  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@map("stock_logs")
}

model EventLog {
  id          String     @id @default(uuid())
  entityType  EntityType
  entityId    String
  action      ActionType
  performedBy String?
  timestamp   DateTime   @default(now())
  details     String?

  user User? @relation(fields: [performedBy], references: [id])

  @@map("event_logs")
}

model RefreshToken {
  id           String   @id @default(uuid())
  hashedToken  String   @unique
  userId       String
  expiresAt    DateTime
  createdAt    DateTime @default(now())
  isRevoked    Boolean  @default(false)

  // Token Family for replay attack prevention
  tokenFamily   String
  parentTokenId String?

  // Device & Session tracking
  deviceName String?
  deviceType String?
  ipAddress  String?
  userAgent  String?
  lastUsedAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("refresh_tokens")
  @@index([userId])
  @@index([expiresAt])
  @@index([tokenFamily])
  @@index([userId, isRevoked])
}

model OrderItem {
  id        String  @id @default(uuid())
  orderId   String
  productId String
  quantity  Int     @default(1)
  price     Float   // sipariş anındaki fiyat

  order   Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@map("order_items")
}


